{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "1password",
  "title": "1Password",
  "description": "Search, copy, and manage your 1Password items directly from Raycast",
  "icon": "icon.png",
  "author": "kkosi",
  "categories": [
    "Security",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "setup",
      "title": "Setup & Sign In",
      "description": "Check setup status and sign in to 1Password CLI",
      "mode": "view"
    },
    {
      "name": "search-items",
      "title": "Search Items",
      "description": "Search and browse your 1Password items",
      "mode": "view"
    },
    {
      "name": "generate-password",
      "title": "Generate Password",
      "description": "Generate a secure password",
      "mode": "view"
    },
    {
      "name": "manage-vaults",
      "title": "Manage Vaults",
      "description": "View and manage your 1Password vaults",
      "mode": "view"
    },
    {
      "name": "new-login-item",
      "title": "New Login Item",
      "description": "Create a new 1Password login item",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.88.0",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.14.0",
    "typescript": "^5.5.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}

